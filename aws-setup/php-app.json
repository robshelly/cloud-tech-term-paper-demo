{
  "family": "php-app",
  "volumes": [
      {
          "name": "my-vol",
          "host": {}
      }
  ],
  "containerDefinitions": [
      {
          "environment": [],
          "name": "simple-app",
          "image": "rshelly/amazon-ecs-sample:v_%BUILD_NUMBER%",
          "cpu": 10,
          "memory": 500,
          "portMappings": [
              {
                  "containerPort": 80,
                  "hostPort": 0
              }
          ],
          "mountPoints": [
              {
                  "sourceVolume": "my-vol",
                  "containerPath": "/var/www/my-vol"
              }
          ],
          "entryPoint": [
              "/usr/sbin/apache2",
              "-D",
              "FOREGROUND"
          ],
          "essential": true
      }
  ]
}